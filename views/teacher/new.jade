extends ../layout

block content
    
    form(action="/teacher/new", method= "POST")
        .container.py-2
            .row 
                .col-12.py-2
                    h2= title
                .col-md-6.col-12 
                    label.form-label(for="first_name") Nombre
                    input#first_name.form-control(type="text", name="first_name")
                .col-md-6.col-12
                    label.form-label(for="last_name") Apellido
                    input#last_name.form-control(type="text", name="last_name")

                .col-md-6.col-12.py-2
                    label.form-label(for="email") Email 
                    input#email.form-control(type="text", name="email")

                .col-md-6.col-12.py-2
                    label.form-label(for="age") Edad
                    input#age.form-control(type="int", name="age")

                .col-md-6.col-12.py-2
                    label.form-label(for="phone") Telefono
                    input#phone.form-control(type="text", name="phone")

                .col-md-12.col-12.py-2 
                    button.btn.btn-primary(type="submit") Crear
                    |   
                    a.btn.btn-secondary.ml-3(href="/teacher") Cancelar
                
  
