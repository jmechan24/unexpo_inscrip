        .row
            .col-12.py-2
                h2= title
            .col-12.py-2
                table.table
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Periodo
                            th(scope='col') Nombre
                            th(scope='col') Apellido
                            th(scope='col') Estatus
                            th(scope='col') Fecha de Creacion
                    tbody
                        //each enrollment in enrollments
                        -for (let i = 0; i < enrollments.length; i++)
                        tr
                            th(scope='row')= enrollments[i].id
                            td= enrollments[i].period
                            td= enrollments[i].student.first_name
                            td= enrollments[i].student.last_name
                            td= enrollments[i].date.toLocaleString()
