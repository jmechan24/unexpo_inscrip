extends ../layout

block content
    .container.py-2
        .row     
            .col-12.py-2
                h2= title        
            .col-12.py-2
                table.table
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Especialidad
                            th(scope='col') Nombre
                            th(scope='col') Apellido
                            th(scope='col') Email
                            th(scope='col') Expediente
                            th(scope='col') Fecha de Creaci√≥n
                    tbody
                        -for(let i= 0; i < students.length; i++)
                            tr
                                th(scope='row')=students[i].id
                                td=students[i].specialty
                                td=students[i].first_name
                                td=students[i].last_name
                                td=students[i].id_student
                                td=students[i].email
                                td=students[i].created_at.toLocaleString()
                                td
                                    a.bi.bi-pencil-square.mx-2(href="/student/update/" + students[i].id)
                                    a.bi.bi-trash2-fill.mx-2(href="#")
                        
            .col-12.py-2
                a.btn.btn-primary(href="/student/new") Nuevo Estudiante