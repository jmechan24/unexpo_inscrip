extends ../layout

block content
    
    form(action="/student/update", method= "POST")
        input(type="hidden", name="id", value=student.id)
        .container.py-2
            .row 
                .col-12.py-2
                    h2= title
                .col-md-6.col-12 
                    label.form-label(for="first_name") Nombre
                    input#first_name.form-control(type="text", name="first_name", value=student.first_name)

                .col-md-6.col-12
                    label.form-label(for="last_name") Apellido
                    input#last_name.form-control(type="text", name="last_name", value=student.last_name)

                .col-md-6.col-12.py-2
                    label.form-label(for="id_student") Expediente
                    input#id_student.form-control(type="text", name = "id_student", value=student.id_student)

                .col-md-6.col-12.py-2 
                    label.form-label(for="specialty") Especialidad 
                    select#specialty.form-select(name="specialty")                        
                        -for(let i = 0; i < specialties.length; i++)
                            option(value=specialties[i].id, selected = value=(student.specialty_id == specialties[i].id))=specialties[i].name

                .col-md-6.col-12.py-2
                    label.form-label(for="email") Email
                    input#email.form-control(type="text", name="email", value=student.email)

                .col-md-12.col-12.py-2 
                    button.btn.btn-primary(type="submit") Actualizar
                    |  
                    a.btn.btn-secondary(href="/student") Cancelar